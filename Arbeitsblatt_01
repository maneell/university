#include <stdio.h>

//Aufgabe 1a
void aufgabe1a(int n){
    static int i=1;
    if(n<1) return;
    else{
        printf("%i",i);
        i++;
        aufgabe1a(n-1);
    }
}

void aufgabe1b(int n){
    if(n<1) return;
    else{
        printf("%i",n);
        aufgabe1b(n-1);
    }
}

void aufgabe2_0(float z, float k){
    float a=(z+1)/2;
    float b= 0.5*(a+z/a);
    while(a-b>k){
        a=b;
        b=0.5*(a+z/a);
        //printf("\n %f",a-b);
    }
    printf("%.5f",b);
    return;
}

void aufgabe2_1(float z,float k){
    float a=z;
    static float i=0;
    if(i==0){
        a=(z+1)/2;
        i=z;
    }
    float b=0.5*(a+i/a);
    if(a-b<k) {
        printf("\n%.5f",b);
        return;
    }
    else{
        aufgabe2_1(b,k);
    }
}

void aufgabe3(int *a, int n){
    int max=a[0];
    for(int i=0; i<n; i++){
        int b=0;
        for(int j=i; j<n; j++){
            b+=a[j];
            if(b>max) max=b;
        }
    }
    printf("%i",max);
}

int fak(int n){
    int k=1;
    for(int i=1; i<n+1; i++){
        k*=i;
    }
    return k;
}

int fak1(int f){
    if(f<=0) return(1);
    return (fak(f-1)*f);
}

void aufgabe4_0(int n, int k){
    int b=fak(n)/(fak(k)*fak(n-k));
    printf("%i",b);
}

void aufgabe4_1(int n, int k){
    int b=fak1(n)/(fak1(k)*fak1(n-k));
    printf("\n%i",b);
}

int aufgabe4_2(int n, int k){
    if(k==0 || k==n) return 1;
    else return aufgabe4_2(n-1,k-1)+aufgabe4_2(n-1,k);
}

