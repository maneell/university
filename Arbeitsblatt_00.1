#include <stdio.h>

void shift(char* s, int n, int k) {
    char help[n];
    for(int i=0; i<n; i++){
        help[i] = s[i];
    }
    
    for(int i=0; i<n; i++){
        
        int j;
        if(i+k > n-1){
            j=i-n+k;
        } else{
            j=i+k;
        }
        
        s[j]=help[i];
    }
}


