#include <stdio.h>

void a3_1(int i){
    if(i==0) printf("Das Array ist nicht lückenlos");
    else printf("Das Array ist lückenlos");
}

void a3_0(int a[], int n){
    int max=a[0]; int min=a[0]; int faktor = 1; int end = 1;
    int lookup[n] = {0};
    for(int i=1; i<n; i++){
        if(a[i]>max) max=a[i];
        if(a[i]<min) min=a[i];
    }
    
    if(max-min>n) {a3_1(0); return;}
    
    if(min<0) faktor=-1;
    
    for(int i=0; i<n; i++){
        lookup[a[i]-faktor*min] = 1;
    }
    
    for(int i=1; i<max-faktor*min; i++){
        if(lookup[i]==0){
            end = 0;
            break;
        }
    }
    a3_1(end);
    return;
}

int main(){
    int a[4] = {-1,2,3,-1};
    a3_0(a, 4);
    
}
