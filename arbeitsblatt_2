float auf3_0(int x, int y){
    if(x<10) return pow(x,y);
    else return (pow(x%10,y) + auf3_0(x/10,y+1));
}

float a3_1(int x, int y){
    int i = 0;
    do{
        if(x<10){
            i += pow(x,y);
        }
        else{
            i += pow(x%10,y);
            x /= 10;
            y += 1;
        }
    }while(x>10);
    return i;
}



